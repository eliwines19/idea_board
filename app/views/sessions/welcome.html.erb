<h1>Welcome</h1>

<% if logged_in? %>

    <h2>You are logged in, <%= current_user.username %> </h2>
    <%= button_to "Logout", "/logout", method: :post %>

    <%= button_to "New Board", new_board_path, method: :get %>
    <%= button_to "All Boards", "/boards", method: :get %>

<% else %>

    <%= button_to "Login", '/login', method: :get%>
    <%= button_to "Sign Up", '/users/new', method: :get%>

<% end %>
